<p>
  <%= comment.body %>
  <% if comment.user %>
    <small>
    <br>
      <em><%= comment.user.name || comment.user.email %></em> commented <%= time_ago_in_words(comment.created_at) %> ago
      <% if policy(comment).destroy? %>
        | <%= link_to "Delete", [@topic, @post, comment], method: :delete %>
      <% end %>
    </small>
  <% end %>
</p>