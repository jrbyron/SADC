<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <% @mtopics.each do |mtopic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to mtopic.name, mtopic %>
          </h4>
          <small>
            <%= mtopic.description %>
          </small>
        </div>
      </div>
    <% end %>
    <%= will_paginate @mtopics %>
  </div>
  <div class="col-md-4">
    <% if policy(Mtopic.new).create? %>
      <%= link_to "New Topic", new_mtopic_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>